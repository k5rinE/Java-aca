package ex;

public class ex03 {

	public static void main(String[] args) {
		
		int num = 0;
		int sum = 0;
		int sum2 = 0;
		double average = 0;
		int count = 0;
		
		for(int i = 0; i<101; i++) {
			sum += i;
			if(i%2 == 0 && i%7==0) {
				count++; sum2 +=i;
				
			}
		}
		System.out.println("총합" + sum);
		System.out.println("평균" + sum/100);
		System.out.println("2의배수,7의배수" + count);
		System.out.println("총합" + sum2);
		System.out.println("총합" + sum);
	}

}
