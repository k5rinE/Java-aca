package ex;
import java.util.*;
public class gang {

	
	   public static void main(String[] args) {

	      int age = 0;
	      int free = 2500;
	      
	      System.out.print("나이를 입력하세요.>");
	      Scanner scanner = new Scanner(System.in);
	      age = scanner.nextInt();
	      
	      
	      if(age >= 0 && age <= 3 ) 
	         System.out.println(free*0 + "원");
	      else if(age >= 4 && age<=13 )
	         System.out.println(free*0.5 + "원");
	      else if(age >= 14 && age<= 19 )
	         System.out.println(free*0.75 + "원");
	      else if(age >= 65 )
	         System.out.println(free*0 + "원");
	      else if(age >= 20 && age<=64 )
	         System.out.println(free*1 + "원");
	      
	      System.out.println("나이 : " + age + " 최종요금 : " + free + "원");
	      
	         
	   }

	}

